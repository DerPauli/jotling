{
	"name": "jotling",
	"productName": "Jotling",
	"description": "Word processor for authors with a focus on builidng out a knowledge base around your writing.",
	"author": "Josh",
	"version": "1.0.0",
	"homepage": "./",
	"main": "main.js",
	"scripts": {
		"prod": "cross-env NODE_ENV=production webpack --mode production --config webpack.build.config.js && electron --noDevServer .",
		"start": "cross-env NODE_ENV=development webpack-dev-server --hot --host 0.0.0.0 --config=./webpack.dev.config.js --mode development",
		"build": "cross-env NODE_ENV=production webpack --config webpack.build.config.js --mode production",
		"package": "npm run build",
		"postpackage": "electron-packager ./ --out=./builds --overwrite",
		"pack": "electron-builder --dir",
		"dist": "electron-builder"
	},
	"dependencies": {
		"@babel/runtime": "^7.10.5",
		"@popperjs/core": "^2.4.4",
		"cli-truncate": "^2.1.0",
		"draft-js": "^0.11.7",
		"draft-js-autolist-plugin": "^3.0.0",
		"draft-js-inline-toolbar-plugin": "^3.0.1",
		"draft-js-plugins-editor": "^3.0.0",
		"draftjs-utils": "^0.10.2",
		"electron-devtools-installer": "^3.1.0",
		"electron-dl": "^3.0.2",
		"electron-is-dev": "^1.2.0",
		"electron-store": "^6.0.0",
		"font-list": "^1.2.11",
		"mousetrap": "^1.6.5",
		"ncp": "^2.0.0",
		"react": "^16.13.1",
		"react-color": "^2.18.1",
		"react-css-collapse": "^4.0.6",
		"react-dom": "^16.13.1",
		"react-popper": "^2.2.3",
		"react-resize-detector": "^5.0.7",
		"sweetalert2": "^10.10.1",
		"system-font-families": "^0.4.1",
		"tar": "^6.0.5",
		"uuid": "^8.3.0",
		"v8-compile-cache": "^2.1.1"
	},
	"devDependencies": {
		"@babel/core": "^7.10.5",
		"@babel/preset-react": "^7.10.4",
		"babel-loader": "^8.1.0",
		"babili-webpack-plugin": "^0.1.2",
		"cross-env": "^7.0.2",
		"css-loader": "^4.2.1",
		"electron": "^9.2.1",
		"electron-builder": "^22.8.0",
		"electron-packager": "^15.0.0",
		"eslint": "^7.7.0",
		"eslint-plugin-flowtype": "^5.2.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-react": "^7.20.6",
		"eslint-plugin-react-hooks": "^4.1.0",
		"file-loader": "^6.0.0",
		"html-webpack-plugin": "^4.3.0",
		"mini-css-extract-plugin": "^0.9.0",
		"style-loader": "^1.2.1",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12",
		"webpack-dev-server": "^3.11.0"
	},
	"build": {
		"productName": "Jotling",
		"appId": "com.electron.Jotling",
		"directories": {
			"buildResources": "backend_files/defaultProjectFiles",
			"output": "dist"
		},
		"fileAssociations": [
			{
				"ext": "jots",
				"name": "Jotling Project",
				"role": "Editor"
			}
		],
		"asar": true,
		"files": [
			"build/main.js",
			"build/",
			"backend_files/defaultProjectFiles",
			"backend_files/defaultProjectFiles/*",
			"**/*",
			"!backup-icons/*",
			"!mockup/*",
			"!node_modules/.cache/",
			"!**/*.map"
		],
		"nsis": {
			"perMachine": true,
			"oneClick": false,
			"allowElevation": true
		},
		"mac": {
			"target": "dmg",
			"category": "public.app-category.productivity"
		}
	}
}
